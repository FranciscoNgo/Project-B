<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Memory">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="389dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:autofillHints=""
        android:fontFamily="@font/coffeetea"
        android:hint="@string/title"
        android:inputType=""
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editStory"
        android:layout_width="389dp"
        android:layout_height="185dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="21dp"
        android:autofillHints=""
        android:fontFamily="@font/coffeetea"
        android:hint="@string/write_something"
        android:inputType=""
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonPick_Location"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editStory"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:onClick="buttonClicked"
        android:text="@string/pick_location"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_below="@id/editStory"
        android:layout_marginStart="6dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/button"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:text="@string/add"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="122dp"
        android:layout_height="60dp"
        android:layout_below="@+id/editStory"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/buttonPick_Location"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:text="Make Picture"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/rpick"
        android:layout_width="218dp"
        android:layout_height="223dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="10dp" />
    


</RelativeLayout>