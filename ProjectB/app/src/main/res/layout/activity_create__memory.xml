<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Memory">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="398dp"
        android:layout_height="109dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="11dp"
        android:autofillHints=""
        android:fontFamily="@font/signatra"
        android:hint="Title"
        android:inputType=""
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editStory"
        android:layout_width="388dp"
        android:layout_height="209dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="152dp"
        android:autofillHints=""
        android:fontFamily="@font/signatra"
        android:hint="Story"
        android:inputType=""
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonPick_Location"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/signatra"
        android:onClick="buttonClicked"
        android:text="@string/pick_location"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/editText"
        android:layout_marginStart="3dp"
        android:layout_marginTop="248dp"
        android:layout_toEndOf="@id/buttonPick_Location"
        android:fontFamily="@font/signatra"
        android:text="@string/add"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@id/editText"
        android:layout_marginStart="7dp"
        android:layout_marginTop="247dp"
        android:layout_toEndOf="@id/btnAdd"
        android:fontFamily="@font/signatra"
        android:text="@string/collections"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="154dp"
        android:layout_height="77dp"
        android:layout_alignTop="@id/btnAdd"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="157dp"
        android:fontFamily="@font/signatra"
        android:onClick="BtnPicClicked"
        android:text="Make picture"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/rpick"
        android:layout_width="123dp"
        android:layout_height="120dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="-597dp"
        android:scaleType="centerCrop" />

</RelativeLayout>