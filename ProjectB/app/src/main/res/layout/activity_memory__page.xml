<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memory_Page">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/DButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@id/EButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:onClick="buttonClicked"
        android:text="Delete"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/EButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="382dp"
        android:onClick="buttonClicked"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:background="@drawable/mainbuttonbackground"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:text="Edit"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="389dp"
        android:layout_height="80dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/coffeetea"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/storyView"
        android:layout_width="389dp"
        android:layout_height="240dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/coffeetea"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="203dp"
        android:layout_height="208dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="382dp"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:visibility="visible" />


    <EditText
        android:id="@+id/EditText"
        android:layout_width="389dp"
        android:layout_height="80dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/coffeetea"
        android:inputType=""
        android:textColor="#737373"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editStory"
        android:layout_width="389dp"
        android:layout_height="240dp"
        android:layout_below="@+id/EditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:inputType=""
        android:textColor="#737373"
        android:textSize="25sp"
        android:fontFamily="@font/coffeetea"
        android:textStyle="bold"
        android:visibility="gone"
        android:autofillHints="" />

    <TextView
        android:id="@+id/DeleteText"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:text="@string/do_you_really_want_to_delete_the_memory"
        android:fontFamily="@font/coffeetea"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:textAllCaps="false"
        android:text="@string/yes"
        android:textSize="25sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="215dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:textAllCaps="false"
        android:text="@string/no"
        android:textSize="25sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/emptyImageText"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="382dp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="25sp"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:text="@string/make_picture"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:background="@drawable/mainbuttonbackground"/>

</RelativeLayout>