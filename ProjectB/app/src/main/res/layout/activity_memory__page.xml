<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memory_Page">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/DButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="583dp"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:textSize="24sp"
        android:onClick="buttonClicked"
        android:background="@drawable/mainbuttonbackground"
        android:text="Delete"
        android:visibility="visible"/>

    <Button
        android:id="@+id/EButton"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="582dp"
        android:onClick="buttonClicked"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:background="@drawable/mainbuttonbackground"
        android:textSize="24sp"
        android:text="Edit"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="77dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/coffeetea"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/storyView"
        android:layout_width="331dp"
        android:layout_height="202dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="@font/coffeetea"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="295dp"
        android:layout_height="198dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="363dp"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:visibility="visible" />


    <EditText
        android:id="@+id/EditText"
        android:layout_width="315dp"
        android:layout_height="77dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/coffeetea"
        android:inputType=""
        android:textColor="#737373"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editStory"
        android:layout_width="331dp"
        android:layout_height="202dp"
        android:layout_below="@+id/EditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/transparent"
        android:inputType=""
        android:textColor="#737373"
        android:textSize="25sp"
        android:fontFamily="@font/coffeetea"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/DeleteText"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:text="Do you really want to delete the Memory?"
        android:fontFamily="@font/coffeetea"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="216dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:text="Yes"
        android:textSize="24sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="215dp"
        android:background="@drawable/mainbuttonbackground"
        android:backgroundTint="#76D7C4"
        android:fontFamily="@font/coffeetea"
        android:text="@string/no"
        android:textSize="24sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/emptyImageText"
        android:layout_width="285dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="279dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:visibility="gone"
        android:fontFamily="@font/coffeetea"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/border"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:text="@string/take_a_picture"/>

</RelativeLayout>