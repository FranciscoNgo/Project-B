<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memory_Page">



    <Button
        android:id="@+id/DButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="583dp"
        android:onClick="buttonClicked"
        android:text="Delete"
        android:visibility="visible"/>

    <Button
        android:id="@+id/EButton"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="582dp"
        android:onClick="buttonClicked"
        android:text="Edit memory"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="285dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="279dp"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:visibility="visible"/>


    <EditText
        android:id="@+id/EditText"
        android:layout_width="315dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:inputType=""
        android:textColor="#737373"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/DeleteText"
        android:layout_width="wrap_content"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="175dp"
        android:text="Are you sure you want to delete the Memory?"
        android:textSize="35sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="216dp"
        android:text="Yes"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="215dp"
        android:text="No"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/emptyImageText"
        android:layout_width="285dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="279dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/border"
        android:clickable="true"
        android:onClick="ImgClicked"
        android:text="Press here to take a picture"/>

</RelativeLayout>