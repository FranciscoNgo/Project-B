<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memory_Displayer">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/buttonEdit_Memory"
        android:fontFamily="@font/signatra"
        android:textSize="25sp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/buttonMemory_Filter_Sorter"
        android:layout_alignParentEnd="true"
        android:onClick="buttonClicked"
        android:text="@string/edit_memory"/>

    <Button
        android:id="@+id/buttonMemory_Filter_Sorter"
        android:fontFamily="@font/signatra"
        android:textSize="25sp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:onClick="buttonClicked"
        android:text="@string/filter_and_sort"/>

</RelativeLayout>